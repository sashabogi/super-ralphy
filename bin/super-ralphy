#!/usr/bin/env zsh
# Entry point for super-ralphy npm package
# Locates and runs the main script

# Get the directory where this script is located
SCRIPT_DIR="${0:A:h}"

# The main script is in the parent directory
MAIN_SCRIPT="$SCRIPT_DIR/../super-ralphy.sh"

# If not found, try the node_modules structure
if [[ ! -f "$MAIN_SCRIPT" ]]; then
  # Try using npm's package resolution
  MAIN_SCRIPT="$SCRIPT_DIR/super-ralphy.sh"
fi

# Use zsh explicitly to run the script (script uses zsh-specific features)
exec zsh "$MAIN_SCRIPT" "$@"
